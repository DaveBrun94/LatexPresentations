%Title page template
\RequirePackage{tikz}

\defbeamertemplate*{title page}{desy}
{
    \begin{tikzpicture}
        \begin{scope}[node distance= 0.1cm]
        
            \node [desy_blue, font=\bfseries,scale= \ifx\titleTwo\empty 1.6 \else 1.2 \fi] (t) at (0.0,0.0) {\begin{tabular}{l} \titleOne \\ \titleTwo \end{tabular}};

            \draw[thick, desy_blue] (0, 0.6) -- (0, 2.0);
            \filldraw[desy_blue] (0,2.0) circle (6pt);

            \draw[thick, desy_blue] (0, -0.6) -- (0, -2.0);
            \filldraw[desy_blue] (0,-2.0) circle (6pt);

            \draw[thick, desy_blue] (0.5, 0.5) -- (2.1, 1.7);
            \filldraw[desy_blue] (2.1,1.7) circle (2pt);
                
            \draw[thick, desy_blue] (-0.5, -0.5) -- (-2.1, -1.7);
            \filldraw[desy_blue] (-2.1,-1.7) circle (2pt);

            \draw[thick, desy_blue] (0.5, -0.5) -- (2.1, -1.7);
            \filldraw[desy_blue] (2.1,-1.7) circle (4pt);

            \draw[thick, desy_blue] (-0.5, 0.5) -- (-2.1, 1.7);
            \filldraw[desy_blue] (-2.1,1.7) circle (4pt);


        \end{scope}  
    \end{tikzpicture}
    \vfill
    \usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle
    \vfill
    \usebeamerfont{titletext}\usebeamercolor[fg]{titletext}\insertauthor
    \newline
    \insertinstitute
    \newline
    \insertdate
}

